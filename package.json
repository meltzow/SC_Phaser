  },
  "homepage": "https://meltzow.github.io/SC_Phaser/",
  "devDependencies": {
    "@babel/core": "^7.11.0",
    "@babel/plugin-proposal-decorators": "^7.15.4",
    "@babel/plugin-transform-runtime": "^7.11.0",
    "@babel/runtime-corejs2": "^7.11.0",
    "@rollup/plugin-replace": "^3.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "parcel": "^1.12.3",
    "ts-node": "^10.3.0",
    "ts-node-dev": "^1.1.8",
